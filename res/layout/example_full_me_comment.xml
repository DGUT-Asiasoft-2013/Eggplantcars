<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
    <TextView 
        android:id="@+id/example_laber"
        android:layout_width="match_parent"
        android:layout_height="23dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="15dp"
        android:text="名字什么的重要ma"
        android:gravity="bottom"/>
    <TextView 
        android:id="@+id/example_text"
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:gravity="center_vertical"
        android:text="评论内容"
        android:textSize="17sp"/>
    
    <RelativeLayout 
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp">
        
        <TextView 
            android:id="@+id/example_time"
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:gravity="center_vertical"
            android:text="时间：abccdde"/>

        <TextView
            android:id="@+id/example_name"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:gravity="center_vertical"
            android:text="名字：dfadsf" />

        <inputcells.AvatarView
            android:id="@+id/example_img"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_alignParentTop="true"
            android:layout_toLeftOf="@+id/example_name"
             />
        
    </RelativeLayout>
    

</LinearLayout>
